@model Clinica.Models.Animal

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir Cadastro</h2>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Animal</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Cliente:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>

        <dt>
            @Html.DisplayName("Espécie:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Especie.NomeEspecie)
        </dd>

        <dt>
            @Html.DisplayName("Nome do Animal:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeAnimal)
        </dd>

        <dt>
            @Html.DisplayName("Idade:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdadeAnimal)
        </dd>

        <dt>
            @Html.DisplayName("Sexo:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SexoAnimal)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
            <a href="@Url.Action("Index")" title="Ir para lista" class="btn btn-success">
                <p>Ir para lista</p>
            </a>
            &nbsp;
            <input type="submit" value="Excluir" title="Excluir" class="btn btn-danger" />
            
        </div>
    }
</div>
