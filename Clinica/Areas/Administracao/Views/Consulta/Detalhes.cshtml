@model Clinica.Models.Consulta

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Consulta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Data da Consulta:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataConsulta)
        </dd>
        <dt>
            @Html.DisplayName("tipo de tratamento:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tratamento.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Nome do Veterinario:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Veterinario.NomeVeterinario)
        </dd>
        
        <dt>
            @Html.DisplayName("Nome do Animal:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Animal.NomeAnimal)
        </dd>
        <dt>
            @Html.DisplayName("Exame:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Exame.DescricaoExame)
        </dd>               

        <dt>
            @Html.DisplayName("Histórico:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Historico)
        </dd>

    </dl>
</div>
<div>
    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;
    <a href="@Url.Action("Editar",new { id = Model.ConsultaID })" title="Editar" class="btn btn-success">
        <p>Editar</p>
    </a>
    &nbsp;
    <a href="@Url.Action("Index")" title="Ir para lista" class="btn btn-success">
        <p>Ir para lista</p>
    </a>
</div>

