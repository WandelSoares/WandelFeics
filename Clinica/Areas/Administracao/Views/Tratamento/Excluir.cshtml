@model Clinica.Models.Tratamento

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Tratamento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome do Animal:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Animal.NomeAnimal)
        </dd>

        <dt>
            @Html.DisplayName("Tipo de Tratamento:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Data Inicio:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataInicio)
        </dd>

        <dt>
            @Html.DisplayName("Data Fim:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataFim)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
            <a href="@Url.Action("Index")" title="Ir para lista" class="btn btn-success">
                <p>Ir para lista</p>
            </a>
            &nbsp;
            <input type="submit" value="Excluir" title="Excluir" class="btn btn-danger" />
        </div>
    }
</div>
